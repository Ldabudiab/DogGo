@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Walker Profile</h4>
    <hr />
    <dl class="Walker-profile">
        <dd class="col-sm-5">
            <img class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
    </dl>
</div>
<div>
    <dl class="Walker-info">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.NeighborhoodId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.NeighborhoodId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.ImageUrl)
        </dt>
    </dl>
    
</div>


   

<div>
    <h4>Walks</h4>
    @foreach (Walks walk in Model.Walks)
    {
        <p>@walk.Duration</p>
    }

</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Walker.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
